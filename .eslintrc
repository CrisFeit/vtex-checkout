{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": [ "eslint:recommended"],
  "rules": {
    "semi": ["error", "never"],
    "keyword-spacing": "error",
    "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "no-unused-vars": 2,
    "no-console": "off",
    "no-undef": 2
  },
  "parserOptions": {
    "sourceType": "module"
  }
}